# Media Management Service Configuration
# Copy this file to .env and customize for your environment
#
# API Base URL: http://localhost:3000/api/v1/media-management

# Server Configuration
MEDIA_SERVICE_SERVER_HOST=0.0.0.0
MEDIA_SERVICE_SERVER_PORT=3000
MEDIA_SERVICE_SERVER_MAX_UPLOAD_SIZE=104857600  # 100MB

# Database Configuration
# Option 1: Use a full PostgreSQL connection URL
# MEDIA_SERVICE_DATABASE_URL=postgres://username:password@localhost:5432/database_name

# Option 2: Use individual connection parameters (these will be used if DATABASE_URL is not set)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=recipe_database
POSTGRES_SCHEMA=recipe_manager
USER_MANAGEMENT_DB_USER=postgres
USER_MANAGEMENT_DB_PASSWORD=your_password_here

# Connection pool settings
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=1
DATABASE_ACQUIRE_TIMEOUT_SECONDS=30

# Storage Configuration
MEDIA_SERVICE_STORAGE_BASE_PATH=./media
MEDIA_SERVICE_STORAGE_TEMP_PATH=./media/temp
MEDIA_SERVICE_STORAGE_MAX_FILE_SIZE=524288000  # 500MB

# Logging Configuration
MEDIA_SERVICE_LOGGING_LEVEL=info
MEDIA_SERVICE_LOGGING_FORMAT=json
