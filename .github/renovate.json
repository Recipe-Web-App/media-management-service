{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":maintainLockFilesWeekly",
    "group:monorepos",
    "group:recommended"
  ],
  "labels": ["dependencies"],
  "assignees": ["jsamuelsen11"],
  "timezone": "America/New_York",
  "schedule": ["before 10am on Monday"],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 5,
  "minimumReleaseAge": "3 days",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard",
  "rebaseWhen": "conflicted",
  "platformAutomerge": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "schedule": ["at any time"]
  },
  "packageRules": [
    {
      "description": "Rust dependencies - base configuration",
      "matchManagers": ["cargo"],
      "labels": ["dependencies", "rust"],
      "semanticCommitType": "deps",
      "semanticCommitScope": "cargo"
    },
    {
      "description": "Rust dev dependencies",
      "matchManagers": ["cargo"],
      "matchDepTypes": ["devDependencies"],
      "semanticCommitType": "deps-dev",
      "semanticCommitScope": "cargo"
    },
    {
      "description": "Rust patch updates - automerge enabled",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["patch", "digest"],
      "groupName": "cargo-patch-updates",
      "groupSlug": "cargo-patch",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Rust minor updates - grouped, manual merge",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["minor"],
      "groupName": "cargo-minor-updates",
      "groupSlug": "cargo-minor",
      "automerge": false
    },
    {
      "description": "Rust major updates - individual PRs, manual review",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true,
      "labels": ["dependencies", "rust", "major-update"]
    },
    {
      "description": "Disable major updates for tokio",
      "matchManagers": ["cargo"],
      "matchPackageNames": ["tokio"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Disable major updates for axum",
      "matchManagers": ["cargo"],
      "matchPackagePatterns": ["^axum"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Disable major updates for sqlx",
      "matchManagers": ["cargo"],
      "matchPackageNames": ["sqlx"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "description": "Group tokio ecosystem",
      "matchManagers": ["cargo"],
      "matchPackagePatterns": ["^tokio"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "tokio-ecosystem"
    },
    {
      "description": "Group serde ecosystem",
      "matchManagers": ["cargo"],
      "matchPackagePatterns": ["^serde"],
      "groupName": "serde-ecosystem"
    },
    {
      "description": "Group tower ecosystem",
      "matchManagers": ["cargo"],
      "matchPackagePatterns": ["^tower"],
      "groupName": "tower-ecosystem"
    },
    {
      "description": "Group tracing ecosystem",
      "matchManagers": ["cargo"],
      "matchPackagePatterns": ["^tracing"],
      "groupName": "tracing-ecosystem"
    },
    {
      "description": "GitHub Actions - grouped with automerge",
      "matchManagers": ["github-actions"],
      "labels": ["dependencies", "github-actions"],
      "groupName": "github-actions",
      "semanticCommitType": "deps",
      "semanticCommitScope": "actions",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "pinDigests": true
    },
    {
      "description": "GitHub Actions major updates - separate PRs, manual review",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["major"],
      "groupName": null,
      "automerge": false,
      "labels": ["dependencies", "github-actions", "major-update"]
    },
    {
      "description": "Docker base images",
      "matchManagers": ["dockerfile"],
      "labels": ["dependencies", "docker"],
      "semanticCommitType": "deps",
      "semanticCommitScope": "docker"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on the first day of the month"],
    "automerge": true,
    "automergeType": "pr"
  }
}
